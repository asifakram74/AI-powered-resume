              "raw": "{{base_url}}/jobs/search?q=developer",
              "host": ["{{base_url}}"],
              "path": ["jobs", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "developer"
                }
              ]
            }
          },
          "response": []
